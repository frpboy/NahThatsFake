
{
  "version": 2,
  "builds": [
    {
      "src": "bot/package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "bot/dist"
      }
    },
    {
      "src": "tma/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "tma/server.js"
    },
    {
      "src": "/bot/(.*)",
      "dest": "bot/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "tma/$1"
    }
  ]
}
