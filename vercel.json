
{
  "version": 2,
  "builds": [
    {
      "src": "bot/package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "bot/dist"
      }
    },
    {
      "src": "tma/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "tma/server.js"
    },
    {
      "src": "/bot/(.*)",
      "dest": "bot/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "tma/$1"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key",
    "SUPABASE_SERVICE_ROLE_KEY": "@supabase_service_role_key",
    "BOT_TOKEN": "@bot_token",
    "RAZORPAY_KEY_ID": "@razorpay_key_id",
    "RAZORPAY_KEY_SECRET": "@razorpay_key_secret"
  }
}
